{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES2020"
    ],
    "typeRoots": [
      "./node_modules/@types",
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "outDir": "./dist",
    "rootDir": "./",
  },
  "include": [
    "src"
  ]
}
